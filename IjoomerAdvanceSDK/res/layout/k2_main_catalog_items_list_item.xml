<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="center_vertical"
              android:orientation="horizontal" >

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:orientation="horizontal" >

        <ImageView
                android:id="@+id/imgk2CatalogCategoryItem"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:src="@drawable/k2_default" />

        <LinearLayout
                android:id="@+id/lnrK2ListItem"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:orientation="horizontal" >

            <com.ijoomer.customviews.IjoomerTextView
                    android:id="@+id/txtk2CatalogCategoryItem"
                    style="?textview_h2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    />

            <com.ijoomer.customviews.IjoomerButton
                    android:id="@+id/btnk2CatalogCategoryItemPrice"
                    style="?k2_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="80dp"
                    android:gravity="right"
                    android:layout_marginLeft="5dp"
                    android:clickable="false" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>