<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lnrMain"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="5dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/jreview_article_topbox"
        android:orientation="vertical"
        android:padding="5dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical" >

                <com.ijoomer.customviews.IjoomerTextView
                    android:id="@+id/jreviewarticletxtFileTitle"
                    style="?jreview_textview_dark_h3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="2dp"
                    android:text="Upload File Title" />

                <com.ijoomer.customviews.IjoomerTextView
                    android:id="@+id/jreviewarticletxtFileDesc"
                    style="?jreview_textview_h2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="2dp"
                    android:text="Upload File Title" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:orientation="horizontal" >

                    <com.ijoomer.customviews.IjoomerTextView
                        android:id="@+id/jreviewarticletxtFileHit"
                        style="?jreview_textview_h2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:text="@string/jreview_hits" />

                    <com.ijoomer.customviews.IjoomerTextView
                        android:id="@+id/jreviewarticletxtFileSize"
                        style="?jreview_textview_h2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:text="@string/size" />
                </LinearLayout>
            </LinearLayout>

            <com.ijoomer.customviews.IjoomerButton
                android:id="@+id/jreviewarticlebtnfiledownload"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:background="@drawable/jreview_download"
                android:visibility="visible" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>