<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="50dp"
              android:background="@color/k2_orange"
              android:paddingBottom="2dp"
              android:orientation="horizontal" >

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/k2_white"
            android:orientation="horizontal" >
        <LinearLayout
                android:id="@+id/lnrSideMenu"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                style="?k2_header"
                android:visibility="visible" >

            <ImageView
                    android:id="@+id/imgSideMenu"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="15dp"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/ijoomer_sidemenu" />

            <View
                    android:layout_width="5dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/ijoomer_sidemenu_seprator"
                    android:visibility="gone" />
        </LinearLayout>


        <ImageView
                android:id="@+id/imgHeader"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:layout_marginBottom="2dp"
                android:src="@drawable/k2_header_logo" />

    </LinearLayout>

</LinearLayout>