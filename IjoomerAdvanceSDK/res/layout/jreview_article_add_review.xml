<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="?jreview_background"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <com.ijoomer.customviews.IjoomerTextView
                style="?jreview_textview_dark_h2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:padding="5dp"
                android:text="@string/jreview_listing_required" />

            <com.ijoomer.customviews.IjoomerTextView
                style="?jreview_textview_white_h3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="5dp"
                android:background="@color/blue"
                android:gravity="left|center_vertical"
                android:padding="5dp"
                android:text="@string/jreview_review_title" />

            <com.ijoomer.customviews.IjoomerEditText
                android:id="@+id/jreviewarticlereviewtitletxt"
                style="?jreview_edittext_h2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical"
                android:singleLine="true" />

            <com.ijoomer.customviews.IjoomerTextView
                style="?jreview_textview_white_h3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@color/blue"
                android:gravity="left|center_vertical"
                android:padding="5dp"
                android:text="@string/jreview_rating" />

            <LinearLayout
                android:id="@+id/lnr_reviews_critaria"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:orientation="vertical" >
            </LinearLayout>

            <com.ijoomer.customviews.IjoomerTextView
                style="?jreview_textview_white_h3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@color/blue"
                android:gravity="left|center_vertical"
                android:padding="5dp"
                android:text="@string/jreview_comments" />

            <com.ijoomer.customviews.IjoomerEditText
                android:id="@+id/jreviewarticlereviewcommenttxt"
                style="?jreview_edittext_h2"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:gravity="left|top"
                android:singleLine="true" />
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|center_horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal"
        android:padding="10dp" >

        <com.ijoomer.customviews.IjoomerButton
            android:id="@+id/btnCancel"
            style="?jreview_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/jreview_cancel" />

        <com.ijoomer.customviews.IjoomerButton
            android:id="@+id/btnCreate"
            style="?jreview_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_weight="1"
            android:text="@string/jreview_submit" />
    </LinearLayout>

</LinearLayout>