<?xml version="1.0" encoding="utf-8"?><RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"                xmlns:app="http://schemas.android.com/apk/res/com.ijoomer.src"                style="?background"                android:layout_width="match_parent"                android:layout_height="match_parent">    <LinearLayout            android:layout_width="match_parent"            android:layout_height="match_parent"            android:orientation="vertical" >        <LinearLayout                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:padding="10dp">            <LinearLayout                    android:id="@+id/lnrClearConversion"                    android:layout_width="0dp"                    android:layout_height="wrap_content"                    android:gravity="center"                    android:background="@color/blue_light"                    android:layout_marginLeft="5dp"                    android:layout_weight="1">                <ImageView                        android:layout_width="32dp"                        android:layout_height="32dp"                        android:src="@drawable/jbolo_chat_clear_conversion"                        android:adjustViewBounds="true"                        android:scaleType="fitXY"/>            </LinearLayout>            <LinearLayout                    android:id="@+id/lnrHistory"                    android:layout_width="0dp"                    android:layout_height="wrap_content"                    android:gravity="center"                    android:background="@color/blue_light"                    android:layout_marginLeft="5dp"                    android:visibility="gone"                    android:layout_weight="1">                <ImageView                        android:layout_width="32dp"                        android:layout_height="32dp"                        android:src="@drawable/jbolo_chat_history"                        android:adjustViewBounds="true"                        android:scaleType="fitXY"/>            </LinearLayout>            <LinearLayout                    android:id="@+id/lnrSendFile"                    android:layout_width="0dp"                    android:layout_height="wrap_content"                    android:gravity="center"                    android:background="@color/blue_light"                    android:layout_marginLeft="5dp"                    android:visibility="gone"                    android:layout_weight="1">                <ImageView                        android:layout_width="32dp"                        android:layout_height="32dp"                        android:src="@drawable/jbolo_chat_send_file"                        android:adjustViewBounds="true"                        android:scaleType="fitXY"/>            </LinearLayout>            <LinearLayout                    android:id="@+id/lnrGroupChat"                    android:layout_width="0dp"                    android:layout_height="wrap_content"                    android:gravity="center"                    android:background="@color/blue_light"                    android:layout_marginLeft="5dp"                    android:visibility="gone"                    android:layout_weight="1">                <ImageView                        android:layout_width="32dp"                        android:layout_height="32dp"                        android:src="@drawable/jbolo_chat_add_group"                        android:adjustViewBounds="true"                        android:scaleType="fitXY"/>            </LinearLayout>            <LinearLayout                    android:id="@+id/lnrLeaveGroup"                    android:layout_width="0dp"                    android:layout_height="wrap_content"                    android:gravity="center"                    android:background="@color/blue_light"                    android:layout_marginLeft="5dp"                    android:visibility="gone"                    android:layout_weight="1">                <ImageView                        android:layout_width="32dp"                        android:layout_height="32dp"                        android:padding="3dp"                        android:src="@drawable/jbolo_chat_group_logout"                        android:adjustViewBounds="true"                        android:scaleType="fitXY"/>            </LinearLayout>        </LinearLayout>        <ListView                android:id="@+id/lstMessage"                android:layout_width="match_parent"                android:layout_height="0dp"                android:layout_marginLeft="10dp"                android:layout_marginRight="10dp"                android:layout_marginTop="5dp"                android:layout_weight="1"                android:cacheColorHint="#00000000"                android:divider="@color/blue"                android:dividerHeight="0dp"                android:smoothScrollbar="true" />        <LinearLayout                android:layout_width="match_parent"                android:layout_height="wrap_content" >            <com.ijoomer.customviews.IjoomerVoiceAndTextMessager                    android:id="@+id/voiceMessager"                    android:layout_width="match_parent"                    android:layout_height="wrap_content"                    app:messager="textOnly"                    app:message_hint="@string/message" >            </com.ijoomer.customviews.IjoomerVoiceAndTextMessager>        </LinearLayout>    </LinearLayout>    <ProgressBar            android:id="@+id/pbrMessage"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_centerInParent="true"/></RelativeLayout>