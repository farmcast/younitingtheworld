<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/lnrGgroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blue"
        android:orientation="horizontal"
        android:visibility="gone" >

        <com.ijoomer.customviews.IjoomerTextView
            android:id="@+id/txtLable"
            style="?jreview_textview_white_h3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lnrReadOnly"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:orientation="horizontal"
        android:visibility="gone" >

        <com.ijoomer.customviews.IjoomerTextView
            android:id="@+id/txtLable"
            style="?jreview_textview_h2"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical|right" />

        <View
            android:layout_width="20dp"
            android:layout_height="20dp" />

        <com.ijoomer.customviews.IjoomerEditText
            android:id="@+id/txtValue"
            style="?jreview_textview_h2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:focusable="false"
            android:gravity="center_vertical"
            android:inputType="none" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lnrLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:orientation="horizontal"
        android:visibility="gone" >

        <com.ijoomer.customviews.IjoomerTextView
            android:id="@+id/txtLable"
            style="?jreview_textview_h2"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical|right" />

        <View
            android:layout_width="20dp"
            android:layout_height="20dp" />

        <com.ijoomer.customviews.IjoomerEditText
            android:id="@+id/txtValue"
            style="?jreview_textview_h2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:focusable="false"
            android:gravity="center_vertical"
            android:inputType="none" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lnrEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:orientation="horizontal"
        android:visibility="gone" >

        <com.ijoomer.customviews.IjoomerTextView
            android:id="@+id/txtLable"
            style="?jreview_textview_h2"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical|right" />

        <View
            android:layout_width="20dp"
            android:layout_height="20dp" />

        <com.ijoomer.customviews.IjoomerEditText
            android:id="@+id/txtValue"
            style="?jreview_edittext_h2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:singleLine="true" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lnrEditArea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:orientation="horizontal"
        android:visibility="gone" >

        <com.ijoomer.customviews.IjoomerTextView
            android:id="@+id/txtLable"
            style="?jreview_textview_h2"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical|right" />

        <View
            android:layout_width="20dp"
            android:layout_height="20dp" />

        <com.ijoomer.customviews.IjoomerEditText
            android:id="@+id/txtValue"
            style="?jreview_edittext_h2"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_gravity="right|center_vertical"
            android:layout_weight="1"
            android:gravity="top|center_vertical" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lnrEditClickable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:orientation="horizontal"
        android:visibility="gone" >

        <com.ijoomer.customviews.IjoomerTextView
            android:id="@+id/txtLable"
            style="?jreview_textview_h2"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical|right" />

        <View
            android:layout_width="20dp"
            android:layout_height="20dp" />

        <com.ijoomer.customviews.IjoomerEditText
            android:id="@+id/txtValue"
            style="?jreview_edittext_h2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:layout_weight="1"
            android:focusable="false"
            android:gravity="center_vertical"
            android:singleLine="true" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lnrEditMap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:orientation="horizontal"
        android:visibility="gone" >

        <com.ijoomer.customviews.IjoomerTextView
            android:id="@+id/txtLable"
            style="?jreview_textview_h2"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical|right" />

        <View
            android:layout_width="20dp"
            android:layout_height="20dp" />

        <com.ijoomer.customviews.IjoomerEditText
            android:id="@+id/txtValue"
            style="?jreview_edittext_h2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:singleLine="true" />

        <ImageView
            android:id="@+id/imgMap"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:padding="2dp"
            android:src="@drawable/ijoomer_map_pin" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lnrSpin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:orientation="horizontal"
        android:visibility="gone" >

        <com.ijoomer.customviews.IjoomerTextView
            android:id="@+id/txtLable"
            style="?jreview_textview_h2"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical|right" />

        <View
            android:layout_width="20dp"
            android:layout_height="20dp" />

        <Spinner
            android:id="@+id/txtValue"
            style="?jreview_spinner"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:singleLine="true" />
    </LinearLayout>

</LinearLayout>