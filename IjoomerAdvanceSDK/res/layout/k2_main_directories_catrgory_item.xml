<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <FrameLayout
        android:id="@+id/frmk2DirectoriesCategoryItem"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="2dp" >

        <ImageView
            android:id="@+id/imgk2DirectoriesCategoryItem"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:src="@drawable/k2_default" />

        <com.ijoomer.customviews.IjoomerTextView
            android:id="@+id/txtk2DirectoriesCategoryItemName"
            style="?k2_textview_orange_h2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@color/k2_transparent_bg"
            android:gravity="center"
            android:maxLines="2"
            android:padding="2dp" />
    </FrameLayout>

</LinearLayout>