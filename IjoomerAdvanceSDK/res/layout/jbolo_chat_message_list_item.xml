<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res/com.ijoomer.ficcione.src"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:orientation="vertical" >    <LinearLayout        android:id="@+id/lnrChatOthers"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:layout_gravity="left"        android:layout_marginRight="40dp"        android:layout_marginTop="5dp"        android:background="@android:color/transparent"        android:padding="5dp"        android:visibility="visible" >        <LinearLayout            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:gravity="center"            android:orientation="vertical"            android:padding="2dp" >            <ImageView                android:id="@+id/imgChatOthersUser"                android:layout_width="50dp"                android:layout_height="50dp"                android:scaleType="fitXY" />            <com.ijoomer.customviews.IjoomerTextView                android:id="@+id/txtChatOthersUserName"                style="?textview_blue_h2"                android:layout_width="match_parent"                android:layout_height="0dp"                android:layout_weight="1"                android:gravity="center"                android:lines="2"                android:padding="1dp"                android:text="super user" />        </LinearLayout>        <LinearLayout            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:background="@drawable/jbolo_chat_other_bg"            android:orientation="vertical" >            <LinearLayout                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:layout_weight="1"                android:orientation="vertical"                android:padding="2dp" >                <com.ijoomer.customviews.IjoomerTextView                    android:id="@+id/txtChatOthersMessage"                    style="?textview_h3"                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:text="hi how are you dude nice to meet you "                    android:visibility="visible" />            </LinearLayout>            <com.ijoomer.customviews.IjoomerTextView                android:id="@+id/txtChatOthersDate"                style="?textview_blue_h1"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:layout_gravity="right"                android:layout_marginTop="5dp"                android:singleLine="true" />        </LinearLayout>    </LinearLayout>    <LinearLayout        android:id="@+id/lnrChatMe"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:layout_gravity="right"        android:layout_marginLeft="40dp"        android:layout_marginTop="5dp"        android:visibility="visible" >        <LinearLayout            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:background="@drawable/jbolo_chat_me_bg"            android:orientation="vertical" >            <LinearLayout                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:layout_weight="1"                android:orientation="vertical"                android:padding="2dp" >                <com.ijoomer.customviews.IjoomerTextView                    android:id="@+id/txtMeChatMessage"                    style="?textview_h3"                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:text="hi dude"                    android:visibility="visible" />            </LinearLayout>            <LinearLayout                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:layout_gravity="right" >                <ProgressBar                    android:id="@+id/pbrMeChatLoading"                    android:layout_width="20dp"                    android:layout_height="20dp"                    android:layout_margin="1dp"                    android:visibility="gone" />                <com.ijoomer.customviews.IjoomerTextView                    android:id="@+id/txtMeChatDate"                    style="?textview_blue_h1"                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:layout_marginTop="5dp"                    android:layout_weight="1"                    android:gravity="right|bottom"                    android:singleLine="true" />            </LinearLayout>        </LinearLayout>    </LinearLayout>    <LinearLayout            android:id="@+id/lnrChat"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_gravity="center_horizontal"            android:gravity="center"            android:background="@drawable/jbolo_chat_center_bg"            android:visibility="gone"            android:orientation="vertical" >        <com.ijoomer.customviews.IjoomerTextView                android:id="@+id/txtChatMessage"                style="?textview_h3"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:text="hi dude"                android:visibility="visible" />    </LinearLayout></LinearLayout>