<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"              android:id="@+id/lnrMain"              android:layout_width="match_parent"              android:layout_height="wrap_content"              android:orientation="vertical" >    <LinearLayout            android:id="@+id/lnrName"            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:layout_margin="5dp"            android:background="@drawable/ijoomer_edittext"            android:orientation="vertical" >        <LinearLayout                android:id="@+id/lnrName"                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:orientation="horizontal" >            <ImageView                    android:id="@+id/jboloUserImg"                    android:layout_width="30dp"                    android:layout_height="30dp"                    android:layout_gravity="center_vertical"                    android:adjustViewBounds="true"                    android:padding="1dp"                    android:scaleType="fitXY"                    android:src="@drawable/ic_launcher" />            <LinearLayout                    android:layout_width="0dp"                    android:layout_weight="1"                    android:layout_height="wrap_content"                    android:layout_marginLeft="5dp"                    android:orientation="vertical">                <com.ijoomer.customviews.IjoomerTextView                        android:id="@+id/jbolotxtUserName"                        style="?textview_blue_h3"                        android:layout_width="wrap_content"                        android:layout_height="wrap_content"                        android:layout_gravity="center_vertical"                        android:layout_weight="1"                        android:singleLine="true" />                <com.ijoomer.customviews.IjoomerTextView                        android:id="@+id/jbolotxtUserStatusMessage"                        style="?textview_h3"                        android:layout_width="wrap_content"                        android:layout_height="wrap_content"                        android:layout_gravity="center_vertical"                        android:maxLines="3"/>            </LinearLayout>            <ImageView                    android:id="@+id/jboloUserStatusImg"                    android:layout_width="20dp"                    android:layout_height="20dp"                    android:layout_gravity="center_vertical"                    android:adjustViewBounds="true"                    android:padding="1dp"                    android:scaleType="fitXY"                    android:src="@drawable/jbolo_chat_away" />        </LinearLayout>    </LinearLayout></LinearLayout>