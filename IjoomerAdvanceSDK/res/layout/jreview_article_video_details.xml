<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ijoomer="http://schemas.android.com/apk/com.ijoomer.src"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/jreview_video_bg"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/lnrVideo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <com.ijoomer.customviews.IjoomerTextView
            android:id="@+id/jreviewarticletxtVideoTitle"
            style="?jreview_textview_dark_h3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/jreview_video_titlebg"
            android:padding="5dp"
            android:textColor="@color/jreview_video_titletxt" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp" >

            <ImageView
                android:id="@+id/jreviewarticleimgVideoAvatar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:contentDescription="@string/jreview_imgtag"
                android:scaleType="fitXY" />

            <ImageView
                android:id="@+id/imgUserImage"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerInParent="true"
                android:contentDescription="@string/jreview_imgtag"
                android:src="@drawable/jreview_video_play_btn" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="5dp" >

            <com.ijoomer.customviews.IjoomerTextView
                android:id="@+id/jreviewarticletxtVideoBy"
                style="?jreview_textview_white_h2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center_vertical"
                android:singleLine="true" />

            <com.ijoomer.customviews.IjoomerTextView
                android:id="@+id/jreviewarticletxtVideoDateLocation"
                style="?jreview_textview_white_h1"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:layout_weight="1"
                android:gravity="right"
                android:singleLine="true" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right|center_vertical"
            android:orientation="horizontal" >

            <com.ijoomer.customviews.IjoomerTextView
                android:id="@+id/jreviewarticletxtVideoLikeCount"
                style="?jreview_textview_white_h2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:drawableLeft="@drawable/jreview_video_like"
                android:drawablePadding="2dp" />

            <com.ijoomer.customviews.IjoomerTextView
                android:id="@+id/jreviewarticletxtVideoDislikeCount"
                style="?jreview_textview_white_h2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:drawableLeft="@drawable/jreview_video_unlike"
                android:drawablePadding="2dp" />

            <com.ijoomer.customviews.IjoomerTextView
                android:id="@+id/jreviewarticletxtVideoShare"
                style="?jreview_textview_white_h2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:drawableLeft="@drawable/jreview_video_share"
                android:drawablePadding="2dp"
                android:text="@string/share" />

            <com.ijoomer.customviews.IjoomerTextView
                android:id="@+id/jreviewarticletxtVideoReport"
                style="?jreview_textview_white_h2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:drawableLeft="@drawable/jreview_report"
                android:drawablePadding="2dp"
                android:text="@string/report"
                android:visibility="gone" />
        </LinearLayout>

        <com.ijoomer.customviews.IjoomerTextView
            android:id="@+id/jreviewarticletxtVideoDesciption"
            style="?jreview_textview_h2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:background="@color/jreview_video_detailbg"
            android:padding="3dp"
            android:textColor="@color/jreview_video_detailtxt" />
    </LinearLayout>

</ScrollView>